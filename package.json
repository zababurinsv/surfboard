{
  "name": "@waves/surfboard",
  "version": "2.1.0",
  "author": {
    "name": "wavesplatform"
  },
  "contributors": [
    {
      "name": "Nazhmudin Baymurzaev",
      "email": "n.baymurzaev@gmail.com"
    },
    {
      "name": "Sergey B",
      "email": "siemarell@gmail.com"
    }
  ],
  "repository": "https://github.com/wavesplatform/surfboard",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json && rm -f tsconfigtsbuildinfo",
    "posttest": "tslint -p test -t stylish",
    "prepack": "oclif-dev manifest && oclif-dev readme",
    "compile": "rm -rf lib/* && tsc -b",
    "build": "npm run compile && npm run prepack && npm run postpack",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "postversion": "git push --tags"
  },
  "homepage": "https://github.com/wavesplatform/surfboard",
  "keywords": [
    "waves",
    "ride",
    "ride-cli",
    "surfboard"
  ],
  "bin": {
    "surfboard": "./bin/run"
  },
  "bugs": "https://github.com/wavesplatform/surfboard/issues",
  "dependencies": {
    "@oclif/command": "^1.5.13",
    "@oclif/config": "^1.13.0",
    "@oclif/plugin-help": "^2.1.6",
    "@waves/js-test-env": "^1.1.0",
    "@waves/ride-js": "^2.0.0",
    "@waves/waves-transactions": "^4.1.0",
    "axios": "^0.21.1",
    "bip39": "^3.0.2",
    "boxen": "^4.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.2",
    "cli-ux": "^5.2.1",
    "dockerode": "^2.5.8",
    "inquirer": "^6.3.1",
    "json5": "^2.1.0",
    "latest-version": "^5.1.0",
    "mocha": "^6.1.4",
    "nconf": "^0.10.0",
    "recursive-readdir": "^2.2.2",
    "tslib": "^1.9.3",
    "long": "^4.0.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.0",
    "@oclif/test": "^1.2.4",
    "@oclif/tslint": "^3.1.1",
    "@types/bip39": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/dockerode": "^2.5.19",
    "@types/inquirer": "^6.0.3",
    "@types/json5": "0.0.30",
    "@types/mocha": "^5.2.6",
    "@types/nconf": "^0.10.0",
    "@types/node": "^10.14.7",
    "@types/long": "^4.0.0",
    "globby": "^8.0.2",
    "nyc": "^14.1.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.5.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "hooks": {
      "init": [
        "./lib/hooks/init",
        "./lib/hooks/init/check"
      ]
    },
    "bin": "surfboard",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "types": "lib/index.d.ts"
}
